{
  "name": "learn-react",
  "version": "0.2.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch-client": "(cd client && gulp)",
    "start-server": "node_modules/.bin/pm2 start server/pm2.json",
    "stop-server": "node_modules/.bin/pm2 stops all --watch",
    "watch-server": "(cd server && ../node_modules/.bin/nodemon src/bin/www.js --exec babel-node)",
    "clean-server": "(cd server && rm -rf dist/ && mkdir dist)",
    "deploy-patch": "npm version patch",
    "deploy-minor": "npm version minor",
    "deploy-major": "npm version major",
    "preversion": "npm test && npm run clean-server && npm run dist && npm run doc && npm run git-dist",
    "dist": "babel server/src -d server/dist",
    "doc": "node_modules/.bin/apidoc -i server/src/ -o server/doc/",
    "git-dist": "git add --all && git commit -m \"[UP] : bump version\"",
    "postversion": "git push",
    "deploy-silent": "npm run preversion && npm run postversion",
    "test": "npm run test-server",
    "test-server": "(NODE_ENV=test cd server && ../node_modules/.bin/mocha test -R spec --recursive --compilers js:babel-core/register)",
    "test-client": "(cd client && ../node_modules/.bin/karma start karma.conf.js --single-run )",
    "reveal": "(cd docs && ../node_modules/.bin/reveal-md Presentation.md --theme custom)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zacaria/learn-react.git"
  },
  "author": "Zacaria",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Zacaria/learn-react/issues"
  },
  "homepage": "https://github.com/Zacaria/learn-react#readme",
  "dependencies": {
    "body-parser": "^1.15.2",
    "config": "^1.24.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.14.0",
    "helmet": "^3.2.0",
    "morgan": "^1.7.0",
    "pm2": "^2.2.3",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "rethinkdbdash": "^2.3.27",
    "reveal-md": "0.0.32"
  },
  "devDependencies": {
    "apidoc": "^0.17.3",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-2": "^6.18.0",
    "browser-sync": "^2.18.6",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "enzyme": "^2.7.1",
    "gulp": "^3.9.1",
    "gulp-plumber": "^1.1.0",
    "karma": "^1.4.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "react-addons-test-utils": "^15.4.2",
    "webpack-stream": "^3.2.0"
  }
}
