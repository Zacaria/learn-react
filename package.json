{
  "name": "learn-react",
  "version": "0.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node_modules/.bin/pm2 start server/pm2.json",
    "stop": "node_modules/.bin/pm2 stops all --watch",
    "serve": "node_modules/.bin/nodemon server/src/bin/www.js --exec babel-node",
    "clean": "rm -rf server/dist/ && mkdir server/dist",
    "deploy-patch": "npm version patch",
    "deploy-minor": "npm version minor",
    "deploy-major": "npm version major",
    "preversion": "npm test && npm run clean && npm run dist && npm run doc && npm run git-dist",
    "dist": "babel server/src -d server/dist",
    "doc": "node_modules/.bin/apidoc -i server/src/ -o server/doc/",
    "git-dist": "git add --all && git commit -m \"[UP] : bump version\"",
    "postversion": "git push",
    "deploy-silent": "npm run preversion && npm run postversion",
    "test": "NODE_ENV=test node_modules/.bin/mocha server/test -R spec --recursive --compilers js:babel-core/register",
    "reveal": "(cd docs && ../node_modules/.bin/reveal-md Presentation.md --highlightTheme github --theme custom)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zacaria/learn-react.git"
  },
  "author": "Zacaria",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Zacaria/learn-react/issues"
  },
  "homepage": "https://github.com/Zacaria/learn-react#readme",
  "dependencies": {
    "body-parser": "^1.15.2",
    "config": "^1.24.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.14.0",
    "helmet": "^3.2.0",
    "morgan": "^1.7.0",
    "pm2": "^2.2.3",
    "rethinkdbdash": "^2.3.27",
    "reveal-md": "0.0.32"
  },
  "devDependencies": {
    "apidoc": "^0.17.3",
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "browser-sync": "^2.18.2",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0"
  }
}
